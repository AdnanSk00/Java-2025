package tka_may2;

import java.util.Scanner;

public class C92_TestArrOpretions {
	public static void main(String[] args) {
        C91_ArrayOperations arrOpr = new C91_ArrayOperations();
        Scanner sc = new Scanner(System.in);
        System.out.print("=*=*= Array Operations Menu =*=*= \n1. Add All Elements \n2. Add Element at Fist Index \n3. Add Element at Last Index \n4. Add Element at Given Index \n5. Delete Element at Given Index \n6. Display Array \n\nEnter your choice : ");
        int opr = sc.nextInt();
        
        switch (opr) {
		case 1: arrOpr.addAllElements(); break;
		case 2: arrOpr.addEleFirstIndex(); break;
		case 3: arrOpr.addEleLastIndex(); break;
		case 4: arrOpr.addEleGivenIndex(); break;
		case 5: arrOpr.addEleLastIndex(); break;
		default:
			throw new IllegalArgumentException("Unexpected value: ");
		}

    }
}
