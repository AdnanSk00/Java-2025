package tka_may2;

import java.util.Scanner;

public class C91_ArrayOperations {
    int size;
    int a[];
    Scanner sc = new Scanner(System.in);

//  init --> 1. size 2. elements
    public C91_ArrayOperations(){
        System.out.print("Enter Size : ");
        size = sc.nextInt();
        a = new int[size];
    }

    void addAllElements(){
        System.out.println("Enter " + size + " elements : ");
        for(int i = 0; i < a.length; i++){
            a[i] = sc.nextInt();
        }
    }
    void addEleFirstIndex(){
    	System.out.print("Enter Element to be Add 1st : ");
    	int newElement = sc.nextInt();
    	
    	int oldElement = a[0];
    	int zeroIndexTarget = 0;
    	for(int i = 0; i < a.length; i++) {
    		if(a[i] == 0) {
    			zeroIndexTarget = i;
    			break;
    		}
    	}
    	for(int i = zeroIndexTarget; i > 0; i--) {
    		a[i] = a[i - 1];		// a[3] = a[2]
    	}
    	a[0] = newElement;
    }
    
    void addEleLastIndex(){
    	System.out.print("Enter Element to be Add Last : ");
    	int newElement = sc.nextInt();
    	
    	int oldElement = a[0];
    	int zeroIndexTarget = 0;
    	for(int i = 0; i < a.length; i++) {
    		if(a[i] == 0) {
    			zeroIndexTarget = i;
    			break;
    		}
    	}
    	for(int i = zeroIndexTarget; i > 0; i--) {
    		a[i] = a[i - 1];		// a[3] = a[2]
    	}
    	a[0] = newElement;
    }
    void addEleGivenIndex(){
        System.out.println("");
    }
    public void deleteEleGivenIndex() {
    	
    }
    void display(){
        System.out.print("Array elements are : ");
        for(int i = 0; i < a.length; i++){
            System.out.println(a[i] + " ");
        }
    }
//  Add Element > positions
//  update
//  delete
//  display


}
